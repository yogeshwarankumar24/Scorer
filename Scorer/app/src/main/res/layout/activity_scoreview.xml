<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/Header"
        android:background="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Share"
            android:textSize="18sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/back"
            android:tint="@color/black"
            android:id="@+id/Backbutton"
            android:padding="12dp" />
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/aaa"/>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/Matchname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Match Name"
            android:textSize="18sp"
            android:gravity="center|left"
            android:minHeight="40dp"
            android:paddingLeft="8dp"
            android:textStyle="bold"
            android:background="@color/white"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/aaa"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="40dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/trophy"
                    android:layout_gravity="center"
                    android:id="@+id/Teamname1image"
                    android:padding="4dp" />
                <TextView
                    android:id="@+id/Teamname1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Team Name - 1"
                    android:textSize="18sp"
                    android:gravity="center|left"
                    android:minHeight="50dp"
                    android:paddingLeft="1dp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/aaa"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/trophy"
                    android:layout_gravity="center"
                    android:id="@+id/Teamname2image"
                    android:padding="4dp" />
                <TextView
                    android:id="@+id/Teamname2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Team Name - 1"
                    android:textSize="18sp"
                    android:gravity="center|left"
                    android:minHeight="50dp"
                    android:paddingLeft="1dp"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/aaa"/>
        <ListView
            android:id="@+id/ScoreListview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/aaa"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/MatchScorepoints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14dp"
                android:gravity="center|left"
                android:layout_weight="1"
                android:minHeight="50dp"
                android:paddingLeft="8dp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/Matchmonthtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14dp"
                android:gravity="center|right"
                android:layout_weight="1"
                android:minHeight="50dp"
                android:paddingRight="8dp"
                android:textColor="@color/black" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scorer for more details www.scorer.com"
            android:textSize="14dp"
            android:gravity="center|left"
            android:layout_weight="1"
            android:minHeight="30dp"
            android:paddingLeft="8dp"
            android:background="@color/white"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/aaa"/>
    </LinearLayout>
</LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="60dp">
        <RelativeLayout
            android:id="@+id/Copy_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/Copy_image"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="4dp"
                android:src="@drawable/link"
                android:tint="@color/black" />
            <TextView
                android:id="@+id/Copy_text"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="Copy Link"
                android:textColor="@color/black"
                android:textSize="14dp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Whatapp_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/Whatapp_image"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="4dp"
                android:src="@drawable/whatsapp" />
            <TextView
                android:id="@+id/Whatapp_text"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="whatsapp"
                android:textColor="@color/black"
                android:textSize="14dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Facebook_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/Facebook_image"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="4dp"
                android:src="@drawable/facebook" />
            <TextView
                android:id="@+id/Facebook_text"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="Facebook"
                android:textColor="@color/black"
                android:textSize="14dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/More_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/More_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="4dp"
                android:src="@drawable/upload" />
            <TextView
                android:id="@+id/More_text"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="More"
                android:textColor="@color/black"
                android:textSize="14dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>