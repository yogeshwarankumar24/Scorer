<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:background="@color/white"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/Matchname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Match Name"
        android:textSize="18sp"
        android:gravity="center|left"
        android:minHeight="40dp"
        android:paddingLeft="8dp"
        android:textStyle="bold"
        android:textColor="@color/black" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/trophy"
                    android:layout_gravity="center"
                    android:id="@+id/Teamname1image"
                    android:padding="4dp" />
            <TextView
                android:id="@+id/Teamname1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team Name - 1"
                android:textSize="18sp"
                android:gravity="center|left"
                android:minHeight="50dp"
                android:paddingLeft="1dp"
                android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/trophy"
                    android:layout_gravity="center"
                    android:id="@+id/Teamname2image"
                    android:padding="4dp" />
                <TextView
                    android:id="@+id/Teamname2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Team Name - 1"
                    android:textSize="18sp"
                    android:gravity="center|left"
                    android:minHeight="50dp"
                    android:paddingLeft="1dp"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:minHeight="100dp">
            <TextView
                android:id="@+id/Matchdate"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="00"
                android:textSize="24dp"
                android:gravity="center"
                android:paddingTop="12dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:background="@drawable/calendar"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/Matchmonthtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="November\n11:11 PM"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="@color/black" />
            </LinearLayout>
    </LinearLayout>
        </LinearLayout>
</LinearLayout>
